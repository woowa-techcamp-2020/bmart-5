{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@commons/*": ["src/commons/*"],
      "@utils/*": ["src/utils/*"],
      "@shared/*": ["../shared/*"],
      "@animates/*": ["src/animates/*"]
    },
    "alwaysStrict": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["**/*.ts", "**/*.tsx"]
}
